<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" Height="512" Width="768" FontSize="50px" FontFamily="Corbel" FontWeight="Heavy">
    <StackPanel>
        <Frame x:Name="_mainFrame"/>
        <Grid Height="512" Width="768">
            <Grid.Background>
                <ImageBrush ImageSource="/background_image.jpg" />
            </Grid.Background>
            <TextBlock Text="TheBlogApp" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" Margin="100,256,0,0"/>
            <Button Content="Sign in" Height="75px" FontSize="40px" Background="White" FontWeight="Heavy" Margin="100,326,495,110" Click="Button_Click"/>
            <Button Content="Sign up" Height="55px" Width="100px" FontSize="20px" Background="White" FontWeight="Heavy" Margin="300,336,368,120" Click="Button_Click_1"/>
        </Grid>
    </StackPanel>
</Window>
