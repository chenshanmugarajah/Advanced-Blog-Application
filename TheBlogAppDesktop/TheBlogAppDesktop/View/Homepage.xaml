            <Label Background="White" Margin="601,20,52,280" />
            <Label Content="View&#xA;   All" FontSize="20px" Background="white" FontWeight="Heavy" FontFamily="Corbel" Height="58" Width="58" Margin="630,28,80,426"/>
            <TextBlock Text="My Dashboard" FontWeight="Heavy" Foreground="Black" Margin="31,25,400,423" />

            <Button Content="Logout" Width="100px" FontSize="20px" Background="White" FontWeight="Heavy" Margin="608,375,60,81" Click="LogoutButton_Clicked" />
            <Label Content="Logged In&#xD;&#xA;        As" FontSize="20px" Background="white" Margin="612,260,58,194" FontWeight="Heavy" FontFamily="Corbel"/>
